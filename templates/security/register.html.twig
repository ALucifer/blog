{% extends 'base.html.twig' %}

{% block body %}
    <div class="login-container">
        {{ form_start(form) }}
            <div class="input-group my-1">
                {{ form_widget(form.email) }}
            </div>
            <div class="input-group my-1">
                {{ form_widget(form.password) }}
            </div>
            <div class="input-group my-1">
                {{ form_widget(form.pseudo) }}
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

